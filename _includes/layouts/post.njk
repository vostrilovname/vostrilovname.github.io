---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h1>{{ title }}</h1>

{{ content | safe }}

<hr>
<ul>
  {%- set nextPost = collections.stories | getNextCollectionItem(page) %}
  {%- if nextPost %}
    <li>Следующий:
      <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
    </li>
  {% endif %}
  {%- set previousPost = collections.stories | getPreviousCollectionItem(page) %}
  {%- if previousPost %}
    <li>Предыдущий:
      <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
    </li>
  {% endif %}
</ul>